<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <fragment
            android:id="@+id/list"
            android:name="dmri.nopo.ViewChangeActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:stretchColumns="1" >

        

     <TextView
         android:id="@+id/usertext"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="@string/userText"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/userlogin"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="" />
        

            <TextView
                android:id="@+id/passtext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/indstillinger"
                android:textStyle="bold"
                android:gravity="center" />

        <TableRow
            android:id="@+id/vibrationRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/vibrationtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vibroText"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/vibrobar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="10" />
        </TableRow>

        <TableRow
            android:id="@+id/lydRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lydtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lydText"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/lydbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="10" />
        </TableRow>

        <TableRow
            android:id="@+id/lysRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lystext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lysText"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/lysbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="10" />
            
        </TableRow>


        
        <TextView
            android:id="@+id/highlighttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/highlightText"
            android:textStyle="bold"
            android:gravity="center" />
                   
        <Spinner
            android:id="@+id/highlightSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true" />

        <TextView
            android:id="@+id/showSMStext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numberSMSText"
            android:textStyle="bold"
            android:gravity="center" />

        <Spinner
            android:id="@+id/numberSMSSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true" />

        <TextView
            android:id="@+id/textViewReceiveFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receiveFrom" 			android:textStyle="bold"
            android:gravity="center" />

        <EditText
            android:id="@+id/receiveFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text" >

            <requestFocus />
        </EditText>

        <RelativeLayout>
            
            <Button
                android:id="@+id/logoutButton"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logoutButton" />

            <Button
                android:id="@+id/deleteUserButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/deleteUserButton" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/saveButton" />

        </RelativeLayout>

    </TableLayout>

</LinearLayout>
</ScrollView>